<%= simple_form_for(@portfolio_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.label "Thumbnail" %>
    <%= f.file_field :thumbnail, multiple: false %>
      <%= f.label "Photos" %>
    <%= f.file_field :photos, multiple: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
